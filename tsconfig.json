{
  "compilerOptions": {
    "target": "ES2020",   
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",  
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,    
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,   
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
